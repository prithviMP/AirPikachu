<div class="row">
  <div class="col-md-4 col-md-offset-4 ">
  <br>
    <h2 class="text-center">Change your password</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render 'shared/devisemes' %>
      <%= f.hidden_field :reset_password_token %>
      <div class="form-group">
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password, :class => "form-control", :placholder => "New Password",autofocus: true, autocomplete: "off" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, :placholder => "Confirm New Password",:class => "form-control",autocomplete: "off" %>
      </div>
      <%= f.submit "Change my password" ,:class => "btn btn-danger"%>
    <% end %>
  </div>
</div>